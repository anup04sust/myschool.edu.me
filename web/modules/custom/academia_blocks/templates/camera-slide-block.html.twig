{% if slides is not empty %}
    <div class="camera_wrap academia-block-camera-slider">
        {% for slide in slides %}
            {% if slide['image_src'] is not empty %}
                <div class="slide-item" 

                     data-src="{{ file_url(slide['image_src']) }}"

                     >
                    {% if slide['title'] is not empty %}
                        <div class="slide-title fadeIn camera_effected">{{ slide['title'] }}</div>
                    {% endif %}
                    {% if slide['caption'] is not empty %}
                        <div class="slide-caption fadeIn camera_effected">{{ slide['caption']|raw  }}</div>
                    {% endif %}

                    {% if slide['video_url'] is not empty %}
                        <iframe width="100%" height="100%" class="embed-responsive-item" src="{{ slide['video_url'] }}?autoplay=1&mute=1&controls=0&rel=0" frameborder="0" webkitAllowFullScreen mozallowfullscreen allowFullScreen></iframe>
                        {% endif %}
                        {% if slide['link'] is not empty %}
                        <a href="{{ slide['link'] }}" class="slide-link"></a>
                    {% endif %}
                </div>
            {% endif %}

        {% endfor %}
    </div>
{% endif %}
